@model WebApplication14.Models.Person

@{
    ViewBag.Title = "Profile";
}

<h2>Profile</h2>

<div class="form-group">
    <label>email:</label>
    <p>@Model.email</p>
</div>
<div class="form-group">
    <label>FirstName:</label>
    <p>@Model.FirstName</p>
</div>
<div class="form-group">
    <label>LastName:</label>
    <p>@Model.LastName</p>
</div>
<div class="form-group">
    <label>Profile Image:</label>
    <img src="@Model.imag" alt="Profile Image" />
</div>

<a href="@Url.Action("EditProfile", "People",new { id=Model.Personid })" class="btn btn-primary">Edit Profile</a>
<a href="@Url.Action("ResetPassword", "People")" class="btn btn-secondary">Reset Password</a>
